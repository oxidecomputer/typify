{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "simple-two-tuple": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "prefixItems": [
        {
          "type": "string"
        },
        {
          "type": "string"
        }
      ]
    },
    "simple-two-array": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "type": "string"
      }
    },
    "less-simple-two-tuple": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "prefixItems": [
        {
          "type": "string"
        },
        {
          "type": "string"
        },
        {
          "type": "string"
        }
      ]
    },
    "unsimple-two-tuple": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "prefixItems": [
        {
          "type": "string"
        }
      ],
      "items": {
        "type": "string"
      }
    },
    "yolo-two-array": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": {
        "$comment": "ignored",
        "type": "string"
      }
    },
    "array-sans-items": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": true
    },
    "tuple-with-bonus-array": {
      "$comment": "NB, this isn't working, can delete this case, but it's to complete the idea of a tuple with a rest array that I've been working on",
      "type": "array",
      "minItems": 2,
      "prefixItems": [
        {
          "type": "integer"
        },
        {
          "type": "string"
        }
      ],
      "items": {
